<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/listview_item_selector"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageView
            android:id="@+id/img_icon"
            android:layout_width="160dp"
            android:layout_height="80dp"
            android:background="@drawable/personal_management" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="80dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/list_item"
                    android:textColor="@drawable/listview_itemtext_selector"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_eng_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="personalManagement"
                    android:textColor="@drawable/listview_itemtext_selector"
                    android:textSize="12sp" />
            </LinearLayout>


        </RelativeLayout>


    </LinearLayout>

</LinearLayout>