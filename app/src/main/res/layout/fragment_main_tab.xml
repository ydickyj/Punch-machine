            android:layout_marginEnd="@dimen/main_bottom_margin"
            android:layout_marginStart="@dimen/main_bottom_margin"
            android:layout_marginTop="@dimen/main_bottom_top"
            android:layout_weight="1.0"
            android:background="@drawable/begin_record3"
            android:gravity="center"
            android:textSize="18sp" />

